<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
    <Button
        android:id="@+id/btn_goback"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back"
        />
        <TextView
            android:id="@+id/detil_title"
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:text="动态详情"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/share"
            />
        </LinearLayout>
    <com.example.a84121.bao_diet.PersonalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >
        <com.example.a84121.bao_diet.RoundImageView
            android:id="@+id/image_user"
            android:adjustViewBounds="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/user_item"
            android:layout_marginTop="6.25dp"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp" />
    </LinearLayout>
    <ImageView
        android:id="@+id/image_item"
        android:adjustViewBounds="true"
        android:maxHeight="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop" />
    <TextView
        android:id="@+id/name_item"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_gravity="start"
        android:textSize="18dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/recLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"

            >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            >
       <com.sackcentury.shinebuttonlib.ShineButton
        android:id="@+id/po_image0"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        app:btn_color="@android:color/darker_gray"
        app:btn_fill_color="#ff6775"
        app:siShape="@raw/heart" />
            <TextView
                android:id="@+id/like_num"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="18dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            >
            <com.sackcentury.shinebuttonlib.ShineButton
                android:id="@+id/po_image1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                app:btn_color="@android:color/darker_gray"
                app:btn_fill_color="#ff6775"
                app:siShape="@raw/star" />
            <TextView
                android:id="@+id/collect_num"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
            </LinearLayout>
</LinearLayout>
        </LinearLayout>
    </com.example.a84121.bao_diet.PersonalScrollView>
</LinearLayout>