<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.a84121.bao_diet.PersonalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/my_page_linear"
        android:layout_height="wrap_content" >
        <com.example.a84121.bao_diet.RoundImageView
            android:id="@+id/image_user"
            android:adjustViewBounds="true"
            android:layout_width="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
            android:src="@drawable/star"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:text="派大星"
            android:textSize="20dp" />


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/me_button"
        android:layout_height="wrap_content" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.example.a84121.bao_diet.RoundImageView
                android:id="@+id/image_user2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/star"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/user_item"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="派大星"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/image_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            android:maxWidth="300dp"
            android:src="@drawable/food1"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:layout_margin="10dp"
            android:text="嘿嘿"
            android:ellipsize="end"
            android:maxEms="11"
            android:maxLines="2"
            android:textSize="17dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
        <com.sackcentury.shinebuttonlib.ShineButton
            android:id="@+id/po_image0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            app:btn_color="@android:color/darker_gray"
            app:btn_fill_color="#ff6775"
            app:siShape="@raw/heart" />
        <com.sackcentury.shinebuttonlib.ShineButton
            android:id="@+id/po_image1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_centerInParent="true"
            app:btn_color="@android:color/darker_gray"
            app:btn_fill_color="#ff6775"
            app:siShape="@raw/star" />
        </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </com.example.a84121.bao_diet.PersonalScrollView>
</LinearLayout>